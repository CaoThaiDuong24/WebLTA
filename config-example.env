# WordPress Database Configuration
# Copy file này thành .env.local và điền thông tin đúng
WP_DB_HOST=localhost
WP_DB_USER=root
WP_DB_PASSWORD=your_password_here
WP_DB_NAME=wordpress_db
WP_DB_PORT=3306
WP_TABLE_PREFIX=wp_

# NextAuth Configuration
NEXTAUTH_SECRET=lta-secret-key-2024-stable
NEXTAUTH_URL=http://localhost:3000

# Encryption Key (32 characters)
ENCRYPTION_KEY=lta-encryption-key-2024-stable-32chars

# Database Configuration (if using local database)
DATABASE_URL="mysql://root:your_password_here@localhost:3306/lta_web"

# Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
